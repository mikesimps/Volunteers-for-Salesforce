<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HoursRequiredOnCompletion</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &#39;Completed&#39;) , ISNULL( Hours_Worked__c ))</errorConditionFormula>
    <errorDisplayField>Hours_Worked__c</errorDisplayField>
    <errorMessage>You must specify the Hours Worked when setting Status to Completed.</errorMessage>
</ValidationRule>
